# ========================================
# NPM Configuration
# ========================================

# 使用国内镜像（可选，加速安装）
# 如果在中国大陆，取消以下注释以使用淘宝镜像
# registry=https://registry.npmmirror.com

# 全局镜像（默认）
registry=https://registry.npmjs.org/

# 严格的SSL检查
strict-ssl=true

# 保存精确版本
save-exact=false
save-prefix=^

# 自动安装peer dependencies
legacy-peer-deps=false

# 日志级别
loglevel=warn

# 进度条
progress=true

# 引擎严格检查
engine-strict=true

# 包锁定
package-lock=true

# 工作区配置
workspaces=true
